<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.yonathan.proyecto.StoryMode.Capitulo1.Page1Fragment"
    android:id="@+id/texto"
    android:layout_width="383dp"
    android:layout_height="523dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="103dp"
    android:background="@drawable/city"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


<TextView
    android:id="@+id/txtparrafo1"
    android:layout_width="300dp"
    android:layout_height="52dp"
    android:layout_marginStart="34dp"
    android:layout_marginLeft="34dp"
    android:layout_marginTop="96dp"
    android:layout_marginEnd="34dp"
    android:layout_marginRight="34dp"
    android:layout_marginBottom="8dp"
    android:background="@color/greetranspanrent"
    android:text="@string/frase1"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/perder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="151dp"
    android:layout_marginLeft="151dp"
    android:layout_marginTop="96dp"
    android:layout_marginEnd="144dp"
    android:layout_marginRight="144dp"
    android:layout_marginBottom="231dp"
    android:text="Intento"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtparrafo1" />

    <TextView
        android:id="@+id/oracion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="69dp"
        android:background="@color/black"
        android:layout_marginRight="69dp"
        android:text="y terminar"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oracion2"
        app:layout_constraintTop_toBottomOf="@+id/txtparrafo1" />

    <TextView
        android:id="@+id/oracion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="197dp"

        android:layout_marginEnd="120dp"
        android:background="@color/black"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="7dp"
        android:text="oracion"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/oracion1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtparrafo1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="367dp"

        android:layout_height="144dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perder"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storypar1" />

        <TextView
            android:id="@+id/respuesta"
            android:layout_width="98dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sotrypar2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="se tiene que llamar" />

        <TextView
            android:id="@+id/txtresp2"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
