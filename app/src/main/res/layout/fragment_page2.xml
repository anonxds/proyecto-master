    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/opciones2"
        android:layout_width="368dp"
        android:layout_height="107dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
